{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    ".probe/packages/generated-package/**/*.d.ts",
    ".probe/server/generated-server/**/*.d.ts",
    ".probe/startup/generated-startup/**/*.d.ts",
    ".probe/client/generated-client/**/*.d.ts"
  ]
}
